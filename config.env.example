# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration
# For SQLite (development) - recommended for local development
DATABASE_URL=sqlite:///opic_portal.db
# For PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/opic_portal

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key

# Google AI Studio (Gemini) Configuration - COMPLETELY FREE!
# Get your FREE API key (no credit card required): https://aistudio.google.com/app/apikey
# Model: gemini-2.5-flash (free, 60 requests/minute)
GOOGLE_AI_API_KEY=your-google-ai-api-key
# Alternative name:
GEMINI_API_KEY=your-gemini-api-key

# Email Configuration (for notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216  # 16MB
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS={'mp3', 'wav', 'webm', 'ogg'}

# Audio Configuration
AUDIO_SAMPLE_RATE=44100
AUDIO_CHANNELS=1
AUDIO_FORMAT=webm



